{
  "name": "novavid",
  "version": "1.0.0",
  "description": "NovaVid: App de escritorio y web para edición, creación y postproducción de video y audio",
  "type": "module",
  "private": true,
  "main": "main.js",
  "scripts": {
     "start": "node server.js",
    "web": "vite --host :: --port 3001",
    "dev": "concurrently \"npm run web\" \"wait-on http://localhost:3001 && electron .\"",
    "build:web": "vite build",
    "preview": "vite preview --host :: --port 3001",
    "build:electron": "npm run build:web && electron-builder --windows",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write .",
    "dev-backend": "nodemon nova-backend/server.js"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^6.16.0",
    "@supabase/supabase-js": "2.30.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "fabric": "^6.9.0",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "openai": "^4.28.0",
    "clsx": "^2.1.1",
    "class-variance-authority": "^0.7.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^7.2.4",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "terser": "^5.39.0",
    "nodemon": "^3.0.3"
  },
  "build": {
    "appId": "com.novavid.app",
    "productName": "NovaVid",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icons/icon.ico"
    }
  }
}
